<?xml version="1.0" encoding="UTF-8"?>
<Patch>
  <Operation Class="XmlExtensions.OptionalPatch" MayRequire="tot.celetech.mkiii">
    <modId>Rhynia.Mod.Misc</modId>
    <key>CMC_SmallerFacility</key>
    <defaultValue>True</defaultValue>
    <caseTrue>
      <Operation Class="PatchOperationSequence">
        <!-- AESA_Radar -->
        <operations>
          <li Class="PatchOperationReplace">
            <xpath>/Defs/ThingDef[defName = "CMC_CICAESA_Radar"]/size</xpath>
            <value>
              <size>(3, 3)</size>
            </value>
          </li>
          <li Class="PatchOperationReplace">
            <xpath>/Defs/ThingDef[defName = "CMC_CICAESA_Radar"]/graphicData</xpath>
            <value>
              <graphicData>
                <texPath>Things/Buildings/CMC_CICRadar</texPath>
                <graphicClass>Graphic_Single</graphicClass>
                <drawSize>(5, 5)</drawSize>
              </graphicData>
            </value>
          </li>
          <!-- Cannon BF -->
          <li Class="PatchOperationReplace">
            <xpath>/Defs/ThingDef[defName = "CMCcannon_BF"]/size</xpath>
            <value>
              <size>(3, 3)</size>
            </value>
          </li>
          <li Class="PatchOperationReplace">
            <xpath>/Defs/ThingDef[defName = "CMCcannon_BF"]/graphicData</xpath>
            <value>
              <graphicData>
                <texPath>Things/Buildings/largebaseFiveXFive</texPath>
                <graphicClass>Graphic_Single</graphicClass>
                <drawSize>(3.8, 3.8)</drawSize>
              </graphicData>
            </value>
          </li>
          <li Class="PatchOperationReplace">
            <xpath>/Defs/ThingDef[defName = "Gun_CMCcannon_BF"]/graphicData</xpath>
            <value>
              <graphicData>
                <texPath>Things/Buildings/CMC_CIWS</texPath>
                <graphicClass>Graphic_Single</graphicClass>
                <drawSize>(2.6, 2.6)</drawSize>
              </graphicData>
            </value>
          </li>
          <!-- Cannon EM -->
          <li Class="PatchOperationReplace">
            <xpath>/Defs/ThingDef[defName = "CMC_EMcannon_Huge"]/size</xpath>
            <value>
              <size>(5, 5)</size>
            </value>
          </li>
          <li Class="PatchOperationReplace">
            <xpath>/Defs/ThingDef[defName = "CMC_EMcannon_Huge"]/graphicData</xpath>
            <value>
              <graphicData>
                <texPath>Things/Buildings/CMC_HugeBase</texPath>
                <graphicClass>Graphic_Single</graphicClass>
                <drawSize>(9.5, 9.5)</drawSize>
              </graphicData>
            </value>
          </li>
          <li Class="PatchOperationReplace">
            <xpath>/Defs/ThingDef[defName = "Gun_EMPCannon_Huge"]/graphicData</xpath>
            <value>
              <graphicData>
                <texPath>Things/Buildings/CMC_LaserSTop</texPath>
                <graphicClass>Graphic_Single</graphicClass>
                <drawSize>(7.5, 7.5)</drawSize>
              </graphicData>
            </value>
          </li>
        </operations>
      </Operation>
    </caseTrue>
  </Operation>
</Patch>