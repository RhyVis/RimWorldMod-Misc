<?xml version="1.0" encoding="UTF-8"?>
<Patch>
  <Operation Class="XmlExtensions.FindMod">
    <mods>
      <li>misstalls.vrshuttle</li>
    </mods>
    <packageId>True</packageId>
    <caseTrue>
      <Operation Class="XmlExtensions.OptionalPatch">
        <modId>Rhynia.Mod.Misc</modId>
        <key>Misc_Misstall_Shuttle</key>
        <defaultValue>False</defaultValue>
        <caseTrue>
          <Operation Class="XmlExtensions.HybridPatch">
            <xpath>/Defs/ThingDef[defName = "VR_ShuttleA"]</xpath>
            <value>
              <comps Operation="Safe">
                <li Class="CompProperties_Launchable" Operation="Safe" CheckAttributes="True">
                  <cooldownTicks Operation="SafeReplace">0</cooldownTicks>
                  <minFuelCost Operation="SafeReplace">50</minFuelCost>
                  <fixedLaunchDistanceMax Operation="SafeReplace">160</fixedLaunchDistanceMax>
                </li>
                <li Class="CompProperties_Transporter" Operation="Safe" CheckAttributes="True">
                  <massCapacity Operation="SafeReplace">6000</massCapacity>
                </li>
                <li Class="CompProperties_Refuelable" Operation="Safe" CheckAttributes="True">
                  <fuelCapacity Operation="SafeReplace">1200</fuelCapacity>
                  <initialConfigurableTargetFuelLevel Operation="SafeReplace">1200</initialConfigurableTargetFuelLevel>
                </li>
              </comps>
            </value>
          </Operation>
        </caseTrue>
      </Operation>
    </caseTrue>
  </Operation>
</Patch>