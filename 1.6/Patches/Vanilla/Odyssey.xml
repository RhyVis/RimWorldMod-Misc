<?xml version="1.0" encoding="UTF-8"?>
<Patch>

  <Operation Class="XmlExtensions.OptionalPatch">
    <modId>Rhynia.Mod.Misc</modId>
    <key>Odyssey_SmallGravAnchor</key>
    <defaultValue>False</defaultValue>
    <caseTrue>
      <Operation Class="XmlExtensions.HybridPatch">
        <xpath>/Defs/ThingDef[defName = "GravAnchor"]</xpath>
        <value>
          <graphicData Operation="Safe">
            <drawSize Operation="Replace">(3, 3)</drawSize>
          </graphicData>
          <size Operation="Replace">(3, 3)</size>
        </value>
      </Operation>
    </caseTrue>
  </Operation>

  <Operation Class="XmlExtensions.OptionalPatch">
    <modId>Rhynia.Mod.Misc</modId>
    <key>Odyssey_GravEngineNoPathCost</key>
    <defaultValue>False</defaultValue>
    <caseTrue>
      <Operation Class="XmlExtensions.HybridPatch">
        <xpath>/Defs/ThingDef[defName = "GravEngine"]</xpath>
        <value>
          <pathCost Operation="Replace">0</pathCost>
        </value>
      </Operation>
    </caseTrue>
  </Operation>

</Patch>